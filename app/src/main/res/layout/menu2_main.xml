<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/menu1"
    tools:context="MainActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btLogout"
                    android:text="Salir"
                    android:layout_alignParentBottom="true"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="171dp"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="132dp"
                    android:layout_height="135dp"
                    android:layout_margin="@dimen/margin_image"
                    android:id="@+id/btn_alfabeto"
                    android:layout_gravity="center_horizontal"

                    style="?android:buttonBarButtonStyle"
                    android:background="@drawable/icono1" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="159dp"
                android:orientation="horizontal"
                >

                <ImageButton
                    android:layout_width="132dp"
                    android:layout_height="@dimen/size_height"
                    android:layout_margin="@dimen/margin_image"
                    android:id="@+id/btn_crear"
                    android:src="@drawable/icono6"
                    android:layout_gravity="center_horizontal"
                    style="?android:buttonBarButtonStyle"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="159dp"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="129dp"
                    android:layout_height="@dimen/size_height"
                    android:layout_margin="@dimen/margin_image"
                    android:id="@+id/btn_ejercicios"
                    android:src="@drawable/icono2"
                    android:layout_gravity="center_horizontal"
                    style="?android:buttonBarButtonStyle"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="159dp"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="127dp"
                    android:layout_height="@dimen/size_height"
                    android:layout_margin="@dimen/margin_image"
                    android:id="@+id/bt_control"
                    android:src="@drawable/icono9"
                    android:layout_gravity="center_horizontal"
                    style="?android:buttonBarButtonStyle"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="159dp"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="127dp"
                    android:layout_height="135dp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/margin_image"
                    android:id="@+id/btn_dias"
                    android:src="@drawable/icono14"
                    android:layout_gravity="center_horizontal"
                    style="?android:buttonBarButtonStyle"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="159dp"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="132dp"
                    android:layout_height="135dp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/margin_image"
                    android:id="@+id/btn_calendario"
                    android:src="@drawable/icono13"
                    android:layout_gravity="center_horizontal"
                    style="?android:buttonBarButtonStyle"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="159dp"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="127dp"
                    android:layout_height="135dp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/margin_image"
                    android:id="@+id/btn_estaciones"
                    android:src="@drawable/icono12"
                    android:layout_gravity="center_horizontal"
                    style="?android:buttonBarButtonStyle"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="159dp"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="134dp"
                    android:layout_height="135dp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/margin_image"
                    android:id="@+id/btn_num"
                    android:src="@drawable/icono4"
                    android:layout_gravity="center_horizontal"
                    style="?android:buttonBarButtonStyle"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="159dp"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="129dp"
                    android:layout_height="135dp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/margin_image"
                    android:id="@+id/btn_mate"
                    android:src="@drawable/icono10"
                    android:layout_gravity="center_horizontal"
                    style="?android:buttonBarButtonStyle"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="159dp"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="130dp"
                    android:layout_height="135dp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/margin_image"
                    android:id="@+id/btn_colores"
                    android:src="@drawable/icono11"
                    android:layout_gravity="center_horizontal"
                    style="?android:buttonBarButtonStyle"
                    />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>