<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hd3"
    android:weightSum="1">


    <ImageButton
        android:id="@+id/bt_2"
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/bt_3"
        android:layout_toStartOf="@+id/bt_3"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/n5"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="6 - 4 ="
        android:textSize="100dp"
        android:textAlignment="center"
        android:textColor="@color/Red"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="58dp" />

    <ImageButton
        android:id="@+id/bt_3"
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:layout_alignTop="@+id/bt_1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/n2"/>

    <ImageButton
        android:id="@+id/bt_1"
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:layout_alignTop="@+id/bt_2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/n6"/>


</RelativeLayout>