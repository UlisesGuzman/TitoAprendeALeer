<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="612dp"
        android:layout_gravity="center_vertical"
        android:scaleType="fitCenter"
        android:src="@drawable/h5" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="617dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="mx.edu.utng.menuprincipal.MainActivity"
        android:orientation="vertical"
        android:weightSum="1"
        >

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/btn_num"
            android:padding="6dp"
            android:src="@drawable/num"
            android:layout_below="@+id/btn_mate"
            android:layout_alignLeft="@+id/btn_mate"
            android:layout_alignStart="@+id/btn_mate"
            android:layout_marginTop="27dp" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/btn_alfabeto"
            android:padding="6dp"
            android:src="@drawable/abecedario"
            android:layout_marginRight="48dp"
            android:layout_alignTop="@+id/btn_crear"
            android:layout_toEndOf="@+id/btn_crear"
            android:layout_marginStart="22dp" />

        <ImageButton
            android:layout_width="106dp"
            android:layout_height="100dp"
            android:id="@+id/btn_colores"
            android:padding="6dp"
            android:src="@drawable/col"
            android:layout_alignTop="@+id/btn_alfabeto"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:layout_width="106dp"
            android:layout_height="100dp"
            android:id="@+id/btn_calendario"
            android:padding="6dp"
            android:src="@drawable/calendario"
            android:layout_alignBottom="@+id/btn_ejercicios"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/btn_ejercicios" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/btn_crear"
            android:padding="6dp"
            android:src="@drawable/vocal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/btn_mate"
            android:padding="6dp"
            android:src="@drawable/mt"
            android:layout_marginRight="24dp"
            android:layout_alignTop="@+id/bt_control"
            android:layout_alignStart="@+id/btn_crear" />

        <ImageButton
            android:layout_width="106dp"
            android:layout_height="100dp"
            android:id="@+id/btn_dias"
            android:padding="6dp"
            android:src="@drawable/dias"
            android:layout_below="@+id/btn_ejercicios"
            android:layout_alignStart="@+id/btn_num" />

        <ImageButton
            android:layout_width="106dp"
            android:layout_height="100dp"
            android:id="@+id/btn_estaciones"
            android:padding="6dp"
            android:src="@drawable/estaciones"
            android:layout_alignTop="@+id/bt_control"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/btn_colores" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_ejercicios"
            android:src="@drawable/ejercicios"
            android:padding="6dp"

            android:layout_alignTop="@+id/btn_num"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/bt_control"
            android:src="@drawable/control"
            android:padding="6dp"
            android:layout_marginTop="13dp"
            android:layout_below="@+id/btn_alfabeto"
            android:layout_alignStart="@+id/btn_ejercicios" />
    </RelativeLayout>

</FrameLayout>
