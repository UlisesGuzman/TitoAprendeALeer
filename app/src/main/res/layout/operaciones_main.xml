<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".OperacionesActivity"
    android:background="@drawable/fondmat"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_operaciones"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:textColor="@color/Red"
        android:text="operaciones basicas"/>

    <ImageButton
        android:layout_width="303dp"
        android:layout_height="60dp"
        android:id="@+id/ib_sumar"
        android:src="@drawable/suma"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>


    <ImageButton
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:id="@+id/ib_restar"
        android:src="@drawable/resta"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>

    <ImageButton
        android:layout_width="160dp"
        android:layout_height="110dp"
        android:id="@+id/ib_multiplicar"
        android:src="@drawable/multiplicacion"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>

    <ImageButton
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:id="@+id/ib_dividir"
        android:src="@drawable/division"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>

</LinearLayout>