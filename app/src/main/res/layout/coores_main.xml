<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/menu4"
    tools:context=".ColoresActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="443dp"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="142dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageButton
                    android:id="@+id/bt_negro"
                    style="?android:buttonBarButtonStyle"
                    android:layout_width="130dp"
                    android:layout_height="128dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/margin_image"
                    android:src="@drawable/negro" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="142dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageButton
                    android:id="@+id/bt_blanco"
                    style="?android:buttonBarButtonStyle"
                    android:layout_width="134dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/margin_image"
                    android:src="@drawable/blanco"
                    android:layout_height="132dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="142dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageButton
                    android:id="@+id/bt_azul"
                    style="?android:buttonBarButtonStyle"
                    android:layout_width="134dp"
                    android:layout_height="132dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/margin_image"
                    android:background="@drawable/blanco"
                    android:src="@drawable/azul" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="142dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageButton
                    android:id="@+id/bt_rojo"
                    style="?android:buttonBarButtonStyle"
                    android:layout_width="134dp"
                    android:layout_height="118dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/margin_image"
                    android:src="@drawable/rojo" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="142dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageButton
                    android:id="@+id/bt_anaranjado"
                    style="?android:buttonBarButtonStyle"
                    android:layout_width="134dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/margin_image"
                    android:src="@drawable/anaranjado" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="142dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageButton
                    android:id="@+id/bt_morado"
                    style="?android:buttonBarButtonStyle"
                    android:layout_width="134dp"
                    android:layout_height="@dimen/size_height"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/margin_image"
                    android:layout_weight="0.08"
                    android:src="@drawable/morado" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="142dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageButton
                    android:id="@+id/bt_verde"
                    style="?android:buttonBarButtonStyle"
                    android:layout_width="134dp"
                    android:layout_height="@dimen/size_height"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/margin_image"
                    android:src="@drawable/ve" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
